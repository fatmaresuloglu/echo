// Veritabanı bağlantı ayarları
generator client {
  provider   = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// Modellerin (Tabloların)
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  username  String   @unique
  name      String?
  password  String
  bio      String?  @default("Henüz bir biyografi eklenmedi.")
  posts     Post[]
  createdAt DateTime @default(now())
}

model Test {
  id          Int        @id @default(autoincrement())
  title       String
  description String
  questions   Question[]
}

model Question {
  id      Int      @id @default(autoincrement())
  text    String
  testId  Int
  test    Test     @relation(fields: [testId], references: [id])
  options Option[]
}

model Option {
  id         Int      @id @default(autoincrement())
  text       String
  resultTag  String
  questionId Int
  question   Question @relation(fields: [questionId], references: [id])
}

model Post {
  id        Int      @id @default(autoincrement())
  content   String   // Paylaşılan yazı
  createdAt DateTime @default(now())
  
  // İlişkiler: Bir postun bir yazarı olur
  author    User     @relation(fields: [authorId], references: [id])
  authorId  Int

  // Beğeni sayısı (Basit yöntem)
  likeCount Int      @default(0)
}